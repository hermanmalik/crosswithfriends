{
  "name": "crosswithfriends",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "server",
    "frontend",
    "shared"
  ],
  "engines": {
    "node": "^20.0.0"
  },
  "dependencies": {
    "firebase-admin": "^13.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/node": "^7.28.0",
    "@babel/preset-env": "^7.28.5",
    "@types/argparse": "^2.0.17",
    "@types/socket.io": "^3.0.1",
    "argparse": "^2.0.1",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "turbo": "^2.3.3"
  },
  "scripts": {
    "devfrontend": "turbo run dev --filter=@crosswithfriends/frontend",
    "devfrontendprod": "turbo run dev:prod --filter=@crosswithfriends/frontend",
    "devbackend": "turbo run dev --filter=@crosswithfriends/server",
    "devbackendprod": "turbo run dev:prod --filter=@crosswithfriends/server",
    "servebackendprod": "yarn workspace @crosswithfriends/server serve:prod",
    "servebackendstaging": "yarn workspace @crosswithfriends/server serve:staging",
    "build": "turbo run build",
    "build:frontend": "turbo run build --filter=@crosswithfriends/frontend",
    "build:backend": "turbo run build --filter=@crosswithfriends/server",
    "build:shared": "turbo run build --filter=@crosswithfriends/shared",
    "start:backend": "yarn workspace @crosswithfriends/server start",
    "test": "turbo run test",
    "test:backend": "turbo run test --filter=@crosswithfriends/server",
    "test:backend:watch": "yarn workspace @crosswithfriends/server test:watch",
    "test:backend:coverage": "yarn workspace @crosswithfriends/server test:coverage"
  },
  "lint-staged": {
    "*.{js,jsx, ts,tsx}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "packageManager": "yarn@4.11.0"
}
